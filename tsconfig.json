{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    // Workaround for a type error within `vscode-jsonrpc`.
    // See https://github.com/microsoft/vscode-languageserver-node/issues/1590
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
